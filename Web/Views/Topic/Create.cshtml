@model Web.Models.Topic.AddTopicViewModel

@{
    ViewBag.Title = "Add Topic";
}

<h2>Add new Topic</h2>

@using (Html.BeginForm("Create", "Topic", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary();
    @Html.AntiForgeryToken();
    @Html.HiddenFor(m => m.ForumId);
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        <div>
            @Html.TextBoxFor(m => m.Name, new { @class="form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Text)
        <div>
            @Html.TextBoxFor(m => m.Text, new { @class = "form-control"})
        </div>
    </div>

    <input type="submit" class="btn btn-primary" value="Add topic" />
    }




