@model Web.Models.Account.AccountViewModel

@if (!Model.EmailConfirmed)
{
    <div class="alert alert-danger">

<span class="badge bg-danger">Warning</span>
<p class="text-danger">
    Your Email address is not confirmed!<br />
    <!-- Button trigger modal -->
    If you didn't receive the confirmation message, click the button - <button type="button" class="btn btn-success" data-toggle="modal" data-target="#confirmEmailConfirmation">Confirm email</button>
</p>
</div>


<!--Modal-->

<form method="post" action="/Account/ConfirmEmail">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="modal fade" id="confirmEmailConfirmation" tabindex="-1" role="dialog" aria-labelledby="confirmEmailLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmEmailLabel">Confirm email</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center text-info">
                    <b>Are you sure you want to send confirmation email to @User.Identity.Name?</b>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary col-md-4" data-dismiss="modal">No</button>
                    <input type="submit" class="btn btn-primary col-md-4 col-md-push-4 text-info" value="Yes" />
                </div>
            </div>
        </div>
    </div>

</form>
}